<Window x:Class="GUI_for_trivia.RoomsMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_for_trivia"
        mc:Ignorable="d"
        Title="RoomsMenu" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="rooms_list" Margin="0,30,0,81">
        </ListBox>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Rooms:" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.487,-0.124" Height="30" Width="86" TextAlignment="Center" FontWeight="Bold"/>
        <Button x:Name="create_room" Content="Create Room" HorizontalAlignment="Center" Margin="0,358,0,0" VerticalAlignment="Top" Height="66" Width="184" Background="#FF76E40C" FontSize="18" FontWeight="Bold" Click="create_room_Click"/>

    </Grid>
</Window>
