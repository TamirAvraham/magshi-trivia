<Window x:Class="GUI_for_trivia.GameResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_for_trivia"
        mc:Ignorable="d"
        Title="GameResultsWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="players_list" Margin="0,76,0,81">
        </ListBox>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Results:" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.487,-0.124" Height="30" Width="86" TextAlignment="Center" FontWeight="Bold"/>
        <Button x:Name="return_back_button" Content="Return Back" HorizontalAlignment="Center" Margin="0,353,0,0" VerticalAlignment="Top" Height="71" Width="384" Background="#FF22FF1B" FontSize="26" Click="return_back_button_Click"/>
        <TextBlock x:Name="players_list_table_header" HorizontalAlignment="Center" Margin="0,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="800" TextAlignment="Center" FontWeight="Bold" FontSize="18" Text="Username : Points , AvgAnswerTime , CorrectAnswerCount"/>
    </Grid>
</Window>
