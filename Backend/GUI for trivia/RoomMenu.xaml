<Window x:Class="GUI_for_trivia.RoomView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_for_trivia"
        mc:Ignorable="d"
        Title="RoomMenu" Height="450" Width="800">
    <Grid>
        <Label x:Name="room_name_label" Content="{}{room name}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="211" Height="38" FontSize="18" FontWeight="Bold"/>
        <Label x:Name="number_of_time_for_question_label_Copy" Content="Time Per Question: {answer_time} sec" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Width="270" Height="35" FontSize="18"/>
        <Label x:Name="players_label" Content="players(max :{10} ):" HorizontalAlignment="Left" Margin="509,10,0,0" VerticalAlignment="Top" Width="281" Height="38" FontSize="18"/>
        <ListBox x:Name="players_list" Margin="509,48,10,0" IsSynchronizedWithCurrentItem="True">

        </ListBox>
        <Label x:Name="questions_count" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="216" Height="35" FontSize="18" Content="Question Count:"/>
    </Grid>
</Window>
